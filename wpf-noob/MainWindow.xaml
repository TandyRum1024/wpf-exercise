<Window x:Class="wpf_noob.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_noob"
        mc:Ignorable="d"
        Title="계산기 빌런" Height="600" Width="450">
    <DockPanel Width="Auto">
        <TextBox x:Name="textBox"
                 DockPanel.Dock="Top"
                 FontSize="45"
                 TextAlignment="Right"
                 Margin="15. 10. 15. -5"
                 IsReadOnly="True"
                 Text="계샌기 2.0" />

        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
        </Grid>
    </DockPanel>
</Window>
